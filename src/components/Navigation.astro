<nav class="navbar" data-nav>
    <div class="container nav-container">
        <a href="#home" class="logo">
            <img src="/logo.png" alt="Burgerium">
        </a>
        <div class="nav-links" id="main-menu">
            <a href="#home" class="active">Home</a>
            <a href="#about">Story</a>
            <a href="#menu">Menu</a>
            <a href="#locations">Locations</a>
            <!-- Reserve Table removed as per request -->
        </div>
        <button class="hamburger" type="button" aria-expanded="false" aria-controls="main-menu" aria-label="Toggle navigation">
            <i class="fas fa-bars" aria-hidden="true"></i>
        </button>
    </div>
</nav>

<style>
    .navbar {
        position: fixed;
        align-items: center;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 100;
        padding: 0.65rem 0;
        background: #FAA227; /* Full width solid orange */
        color: #000;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        transition: var(--transition);
    }

    .nav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo {
        background: none; /* Remove blocky background */
        padding: 0;
        border-radius: 0;
        display: flex;
        align-items: center;
    }

    .logo img {
        height: 64px;
        width: auto;
    }

    .nav-links {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .nav-links a {
        font-size: 1rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 1.5px; /* More breathing room */
        position: relative;
        font-family: var(--font-body); /* Clean Outfit font */
        color: #000;
    }

    .nav-links a.active, .nav-links a:hover {
        color: #fff;
    }

    .nav-links a:not(.btn-primary)::after {
        content: '';
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 0;
        height: 2px;
        background: #fff;
        transition: 0.3s;
    }

    .nav-links a:not(.btn-primary):hover::after {
        width: 100%;
    }

    /* Inverted Button for Orange Nav */
    :global(.btn-primary.inverted) {
        background: #000;
        color: #FAA227;
        box-shadow: none;
    }

    :global(.btn-primary.inverted:hover) {
        background: #222;
        color: #fff;
        transform: translateY(-1px);
    }

    .hamburger {
        display: none;
        font-size: 1.35rem;
        cursor: pointer;
        color: #000;
        border: 1px solid rgba(0,0,0,0.1);
        background: transparent;
        padding: 0.45rem 0.6rem;
        border-radius: 8px;
        transition: var(--transition);
    }

    .hamburger:hover,
    .hamburger:focus-visible {
        background: rgba(0,0,0,0.05);
        outline: none;
        box-shadow: none;
    }

    .nav-links a:focus-visible {
        outline: 2px solid #000;
        outline-offset: 4px;
    }

    .navbar.open .nav-links {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        position: fixed;
        inset: 0;
        padding: 6rem 2rem 3rem;
        background: rgba(12, 12, 14, 0.96);
        align-items: flex-start;
    }

    .navbar.open .nav-links .btn-primary {
        width: 100%;
        text-align: center;
    }

    .navbar.scrolled {
        background: rgba(12, 12, 14, 0.9);
        box-shadow: 0 10px 30px rgba(0,0,0,0.4);
        padding: 0.45rem 0;
    }

    @media (max-width: 900px) {
        .nav-links { display: none; }
        .navbar.open .nav-links { display: flex; }
        .hamburger { display: inline-flex; }
        .nav-links a {
            font-size: 1.1rem;
        }
    }
</style>

<script>
    const navbar = document.querySelector('[data-nav]');
    const hamburger = document.querySelector('.hamburger');
    const navLinks = document.querySelector('.nav-links');

    const closeMenu = () => {
        if (!navbar) return;
        navbar.classList.remove('open');
        if (hamburger) hamburger.setAttribute('aria-expanded', 'false');
        document.body.style.overflow = '';
    };

    if (hamburger && navbar) {
        hamburger.addEventListener('click', () => {
            const isOpen = navbar.classList.toggle('open');
            hamburger.setAttribute('aria-expanded', String(isOpen));
            document.body.style.overflow = isOpen ? 'hidden' : '';
        });
    }

    if (navLinks) {
        navLinks.addEventListener('click', (event) => {
            const target = event.target;
            if (target instanceof HTMLElement && target.tagName === 'A') {
                closeMenu();
            }
        });
    }

    window.addEventListener('keydown', (event) => {
        if (event.key === 'Escape') closeMenu();
    });

    window.addEventListener('resize', () => {
        if (window.innerWidth > 900) closeMenu();
    });

    // Scroll shadow
    window.addEventListener('scroll', () => {
        if (!navbar) return;
        if (window.scrollY > 50) {
            navbar.classList.add('scrolled');
        } else {
            navbar.classList.remove('scrolled');
        }
    });
</script>
