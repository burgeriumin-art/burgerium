<section id="menu" class="menu-preview section-padding">
    <div class="container">
        <div class="section-header center-text scroll-reveal">
            <span class="section-tag">Curated Favorites</span>
            <h2>The Highlights</h2>
        </div>
        
        <div class="menu-grid">
            <!-- Item 1 -->
            <div class="menu-card glass scroll-reveal">
                <div class="card-image">
                    <img src="/peri_burger.png" alt="Lava Cheese Chicken" loading="lazy">
                </div>
                <div class="card-info">
                    <div class="card-header">
                        <h3>Lava Cheese Chicken</h3>
                        <span class="price">₹260</span>
                    </div>
                    <p class="description"><b>Coimbatore's Cult Favorite (RS Puram).</b> A molten core of cheese inside a juicy chicken patty. Warning: Highly Addictive.</p>
                    <button class="btn-text">Order Now <i class="fas fa-arrow-right"></i></button>
                </div>
            </div>

            <!-- Item 2 -->
            <div class="menu-card glass scroll-reveal delay-1">
                <div class="card-image">
                    <!-- Using the feast image to represent sides/fries -->
                    <img src="/feast.png" alt="Cheesy Fries Spread" style="object-position: center;" loading="lazy"> 
                </div>
                <div class="card-info">
                    <div class="card-header">
                        <h3>Cheesy French Fries</h3>
                        <span class="price">₹140</span>
                    </div>
                    <p class="description"><b>The Palakkad Legend (Stadium Bypass).</b> Crispy shoestring fries drowned in our secret house-made liquid gold cheese sauce.</p>
                    <button class="btn-text">Order Now <i class="fas fa-arrow-right"></i></button>
                </div>
            </div>

            <!-- Item 3 -->
            <div class="menu-card glass scroll-reveal delay-2">
                <div class="card-image">
                     <!-- Retaining original burger image for variety -->
                    <img src="/burger.png" alt="Thousand Island Burger" style="filter: brightness(1.1);" loading="lazy">
                </div>
                <div class="card-info">
                    <div class="card-header">
                        <h3>Thousand Island</h3>
                        <span class="price">₹230</span>
                    </div>
                    <p class="description"><b>The OG Classic.</b> Grilled supreme patty slathered in our signature zesty Thousand Island dressing.</p>
                    <button class="btn-text">Order Now <i class="fas fa-arrow-right"></i></button>
                </div>
            </div>
        </div>
        <div class="menu-cta glass scroll-reveal delay-1">
            <div>
                <p class="eyebrow">Craving more?</p>
                <h3>Full menu available in-store & for pickup.</h3>
                <p class="muted">Call ahead to reserve a table or pre-order your favorites.</p>
            </div>
            <div class="menu-cta-actions">
                <a class="btn-primary" href="#contact">Reserve Table</a>
                <a class="btn-secondary" href="tel:+916362006008">Call 6362 006 008</a>
            </div>
        </div>
    </div>
</section>

<style>
    .menu-preview {
        background: radial-gradient(circle at top right, #1a1a20 0%, var(--bg-color) 40%);
    }

    .center-text {
        text-align: center;
        margin-bottom: 4rem;
    }

    .center-text h2 {
        font-size: 3rem;
    }

    .menu-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
    }

    .menu-card {
        border-radius: 20px;
        overflow: hidden;
        transition: var(--transition);
        border: 1px solid rgba(255,255,255,0.05);
    }

    .menu-card:hover {
        transform: translateY(-10px);
        border-color: var(--accent-gold);
    }

    .card-image {
        height: 250px;
        overflow: hidden;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }

    .menu-card:hover .card-image img {
        transform: scale(1.1);
    }

    .card-info {
        padding: 2rem;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .card-header h3 {
        font-size: 1.4rem;
        font-family: var(--font-heading);
    }

    .price {
        font-weight: 700;
        color: var(--accent-gold);
        font-size: 1.2rem;
    }

    .description {
        color: var(--text-secondary);
        margin-bottom: 1.5rem;
        font-size: 0.95rem;
    }

    .btn-text {
        background: none;
        border: none;
        color: var(--text-primary);
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: 0.3s;
    }

    .btn-text:hover {
        color: var(--accent-gold);
        gap: 0.8rem;
    }

    .menu-cta {
        margin-top: 3rem;
        padding: 1.8rem 2rem;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1.5rem;
        border: 1px solid rgba(255,255,255,0.05);
    }

    .menu-cta h3 {
        margin-bottom: 0.4rem;
        font-size: 1.6rem;
    }

    .muted {
        color: var(--text-secondary);
    }

    .eyebrow {
        letter-spacing: 1px;
        text-transform: uppercase;
        font-size: 0.8rem;
        color: var(--text-secondary);
    }

    .menu-cta-actions {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
        justify-content: flex-end;
    }

    @media (max-width: 700px) {
        .menu-cta {
            flex-direction: column;
            align-items: flex-start;
        }
        .menu-cta-actions {
            justify-content: flex-start;
        }
    }
</style>
